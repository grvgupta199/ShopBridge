@model IEnumerable<ShopBridge.Model.Item>

@{
    Layout = null;
}
    <div class="=row ">
        @if (Model != null)
        {

            <table class="table table-striped table-bordered table-sm mt-4" id="tblItemList">
                <tr>
                    <th>

                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImagePath)
                    </th>
                    <th>Action</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("GetItemDetails", "Item", new { id = item.Id })" target="_blank">@item.Name</a>

                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>

                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <td>
                                <img src="@item.ImagePath" class="img-thumbnail" style=" width: 35px !important;
    height: 30px !important;" />
                            </td>
                        }
                        else
                        {
                            <td>--</td>
                        }


                        <td>
                            <a href="@Url.Action("GetItemDetails", "Item", new { id = item.Id })" target="_blank"> <i class="fas fa-eye text-primary"></i></a>
                            <a href="javascript:void(0)" data-href="@Url.Action("DeleteItem", "Item")" id="@item.Id" class="btnDelete"> <i class="fas fa-trash text-danger"></i></a>

                        </td>
                    </tr>
                }

            </table>


        }
    </div>